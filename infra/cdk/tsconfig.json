{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "lib",
    "outDir": "dist"
  },
  "include": ["lib/**/*.ts", "bin/**/*.ts"],
  "exclude": ["dist", "cdk.out", "node_modules"]
}
